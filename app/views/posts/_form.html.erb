<div id="posts-wrapper">
  <div class="post">
    <div class="post-body">
      <div class="image-wrap">
        <%= form_image_select(@post) %>
      </div>
        <%= simple_form_for @post, html: { multipart: true } do |f| %>
          <div class="row">
            <div class="col-md-12 text-center">
              <%= f.error_notification %>
            </div>
          </div>
          <div id="form-containers">
            <div id="container-fluid">
              <div id="form-group text-center">
                <h4 class="uploads">Upload an image:</h4>
                <%= f.input :image, label: false, input_html: { onChange: 'loadFile(event)' } %>
              </div>
              <div class="form-group text-center">
                <%= f.input :caption, label: false, placeholder: 'Add your caption' %>
              </div>
              <div class="form-group text-center">
                <%= f.button :submit, class: 'btn-success btn-block' %>
                <%= link_to 'Back', posts_path, class:'btn-default btn-block'%>
              </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


